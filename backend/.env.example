# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
DEBUG=False
ENVIRONMENT=production

# Security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-long-example

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourusername.github.io,http://localhost:5173,http://localhost:3000

# Rate Limiting
# Max requests per hour per IP
RATE_LIMIT_PER_HOUR=5

# n8n Webhook Integration
# Get your webhook URL from n8n workflow
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/portfolio-contact

# Logging
LOG_LEVEL=INFO
